<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/yellow_800</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:colorEdgeEffect">@android:color/black</item>
        <item name="colorControlNormal">@color/gray_700</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonBarStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/yellow_800</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:colorEdgeEffect">@android:color/black</item>
        <item name="colorControlNormal">@color/gray_700</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonBarStyle</item>
    </style>

    <style name="ButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CardStyle">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="AboutButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">@color/blue_100</item>
    </style>
</resources>
